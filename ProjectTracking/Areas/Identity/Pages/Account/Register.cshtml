@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@inject Data.Methods.Interfaces.IDepartments departmentDtos
@*@inject Data.Methods.Interfaces.ICompanies CompanyDtos*@

<div class="MiddleBoxContainerTemplate">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="MiddleBox">
            <h3>Create a new account.</h3>
            <div class="MiddleBoxContent">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.FirstName"></label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.LastName"></label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Input.DateOfBirth"></label>
                    <input asp-for="Input.DateOfBirth" class="form-control datetimepicker" />
                    <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-lg-6 col-md-6">

                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.RoleName">Role</label>
                            <select asp-for="Input.RoleName" asp-items="@Model.Roles.Select(k=>new SelectListItem(k.Name,k.Name)).ToList()"></select>
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.RoleKey"></label>
                            <input asp-for="Input.RoleKey" class="form-control" />
                            <span asp-validation-for="Input.RoleKey" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">

                    @*<div class="col-lg-6 col-md-6">
                        <label>Department</label>
                        <select asp-for="Input.DepartmentID">
                            @foreach (var dept in departmentDtos.GetAll())
                            {
                                <option value="@dept.ID">@dept.Name</option>
                            }
                        </select>
                    </div>*@

                    @*<div class="col-lg-6 col-md-6">
                        <label>Company</label>
                        <select asp-for="Input.CompanyID">
                            @foreach (var comp in CompanyDtos.GetAll())
                            {
                                <option value="@comp.ID">@comp.Name</option>
                            }
                        </select>
                    </div>*@

                </div>

                <h4 class="text-danger">@ViewData["ErrorMessage"]</h4>

                <button type="submit" class="Button-Shared Button-Block">Register</button>
                <p class="BottomLinks LinksSection">
                    <a href="~/home/login">Login</a>
                </p>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@section Styles {
    <link href="~/Content/Login.min.css" rel="stylesheet" />
}
