<div class="modal" id="TeamUsersModal">
    <div class="modal-dialog ">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Team Users</h4>
            </div>

            <div class="modal-body">
                <div class="checklist-container scrollable-container-400">

                    <p v-show="teamUsers.isLoading">Loading teams....</p>
                    <p v-show="!teamUsers.isLoading && !teamUsers.data.length">There are currently no assignable users under this team!</p>
                    <p v-for="(user, idx) in teamUsers.data">
                        <input type="checkbox" :value="user.key" v-model="teamUsers.form.record.userIds" />
                        {{user.value}}
                    </p>
                </div>
            </div>

            <div class="modal-footer modal-footer-centered">
                <p class="f-display-message">
                    {{teamUsers.form.message}}
                </p>
                <div class="modal-buttons-container">
                    <button v-bind:disabled="teamUsers.form.isSaving" type="button" class="s-btn s-btn-primary" v-on:click="teamUsers_save">
                        Save {{teamUsers.form.isSaving ? '...':''}}
                    </button>
                    <button type="button" class="s-btn s-btn-outline" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>
