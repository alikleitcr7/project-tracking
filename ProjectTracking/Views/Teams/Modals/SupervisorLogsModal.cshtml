<div class="modal" id="SupervisorLogsModal">
    <div class="modal-dialog ">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Supervisor Logs</h4>
            </div>

            <div class="modal-body">

                <div class="v-container scrollable-container-400">

                    <p v-show="!teams.supervisorLogs.isLoading && !teams.supervisorLogs.data.length">There are no logs recorded yet!</p>

                    <table class="table table-borderless" v-show="teams.supervisorLogs.data.length">

                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Supervisor</th>
                                <th>Assigned By</th>
                            </tr>
                        </thead>

                        <tbody>

                            <tr v-for="(log, idx) in teams.supervisorLogs.data">
                                <td>{{log.dateAssignedDisplay}}</td>
                                <td>{{log.user.fullName}}</td>
                                <td>{{log.assignedByUser.fullName}}</td>
                            </tr>
                        </tbody>

                    </table>

                    <p class="skeleton-loading-item" v-show="teams.supervisorLogs.isLoading" v-for="k in [,,]"></p>


                </div>

            </div>

        </div>
    </div>
</div>
