<div id="ProjectStatusModificationsModal" class="modal  fade" role="dialog">

    <div class="modal-dialog modal-lg">
        
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">"{{projects.activeProject ? projects.activeProject.title : ''}}" Status History</h4>
            </div>

            <div class="modal-body">
                <p v-show="projects.statusModifications.isLoading">Loading...</p>
                <p v-show="!projects.statusModifications.isLoading &&  !projects.statusModifications.data.length">No status modifications  </p>
                <div class="scrollable-container-400">
                    <p v-if="projects.activeProject" >current status - {{projects.activeProject.statusDisplay}}</p>
                    <p v-for="modification in projects.statusModifications.data">{{modification.dateModifiedDisplay}} - {{modification.statusDisplay}}</p>
                </div>

            </div>

            <div class="modal-footer">
            </div>

        </div>

    </div>

</div>
