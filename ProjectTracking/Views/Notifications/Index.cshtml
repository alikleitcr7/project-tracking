
@{
    ViewData["Title"] = "Profile";
}

<div id="ManagerNotifications" class="main-container" v-cloak>

    <h2>Sent Boradcasts</h2>

    <div class="buttons">
        <button class="Button-Shared" type="button" v-on:click="openNewMessageModal">New Broadcast</button>
    </div>

    <section id="Pagination" v-bind:class="{ 'd-none':(dataPaging.totalPages < 2 )}">
        <div class="container">

            <paginate :page-count="dataPaging.totalPages"
                      :container-class="dataPaging.pagination"
                      :prev-text="dataPaging.prev"
                      :next-text="dataPaging.next"
                      :click-handler="clickCallback">
            </paginate>

        </div>
    </section>

    <h4 v-show="isLoading">Loading...</h4>
    <h4 v-show="!isLoading && !notifications.length">No Notifications</h4>

    <div class="notification-container" v-show="notifications.length">
        <div class="notification" v-for="(item,idx) in notifications"
             v-on:click="notificationClick(idx)"
             v-bind:class="getNotificationClasses(item)">
            <div class="notification__user"> {{item.toUserDisplay}}</div>
            <div class="notification__message" v-html="item.message"></div>
            <div class="notification__date">{{item.dateSentTimeEllapsedDisplay}}</div>
        </div>
    </div>


    <div id="NewMessageModal" class="modal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">
                        Send Message
                    </h4>
                </div>
                <div class="modal-body">

                    <div class="send-notification-container">
                        <div>
                            <label>Message</label>
                            <textarea v-model="form.message" rows="4" class="form-control"></textarea>
                            <br />
                            <label>Type</label>
                            <select class="form-control" v-model="form.type">
                                <option value="0">Default</option>
                                <option value="1">Information  </option>
                                <option value="2">Important </option>
                            </select>
                        </div>
                        <div>
                            <label>Department</label>
                            <select class="form-control" v-model="selectedDepartment">
                                <option disabled value="null">Select a Department</option>
                                <option v-for="option in departments" v-bind:value="option.id">
                                    {{option.name}}
                                </option>
                                <option value="0">Other</option>
                            </select>

                            <div class="scrollable-container">
                                <table class="table table-small-display">
                                    <tr v-for="item in employees">
                                        <td style="width:50px">
                                            <input type="checkbox" :value="item.id" v-model="form.selectedEmployees" />
                                        </td>
                                        <td>{{item.fullName}}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>


                    </div>

                    <h4 class="">{{messageModal}}</h4>

                </div>
                <div class="modal-footer">
                    <button type="button" class="Button-Shared" v-on:click="sendMessage" >Send</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

</div>


@section scripts{
    <script src="~/js/ManagerNotifications.js"></script>
}

