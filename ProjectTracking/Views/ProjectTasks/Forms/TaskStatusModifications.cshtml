<div id="ProjectTaskStatusModificationsModal" class="modal  fade" role="dialog">

    <div class="modal-dialog modal-lg">
        
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">"{{projectTasks.activeProjectTask ? projectTasks.activeProjectTask.title : ''}}" Status History</h4>
            </div>

            <div class="modal-body">
                <p v-show="projectTasks.statusModifications.isLoading">Loading...</p>
                <div class="scrollable-container-400">
                    <p v-if="projectTasks.activeProjectTask">Current Status - {{projectTasks.activeProjectTask.statusDisplay}} by  <a :href="`/profile/${projectTasks.activeProjectTask.statusByUserId}`"> {{projectTasks.activeProjectTask.statusByUserName}}</a></p>
                    <p v-for="modification in projectTasks.statusModifications.data">{{modification.dateModifiedDisplay}} - {{modification.statusDisplay}} by <a :href="`/profile/${modification.modifiedByUserId}`"> {{modification.modifiedByUserName}}</a></p>
                </div>
                <p v-show="!projectTasks.statusModifications.isLoading &&  !projectTasks.statusModifications.data.length">No status modifications  </p>

            </div>

            <div class="modal-footer">
            </div>

        </div>

    </div>

</div>
