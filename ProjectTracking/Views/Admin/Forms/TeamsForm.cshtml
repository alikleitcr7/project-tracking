<div id="Teams" class="Teams v-container" v-cloak=v-cloak>
    <div class="buttons mb-2">
        <button type="button" v-on:click="teams_openModal" class="s-btn s-btn-primary">New Team &nbsp;<i class="glyphicon glyphicon-plus"></i></button>
    </div>

    <h4 v-show="!teams.isLoading && !teams.data.length ">
        <br />
        <span class="c-clickable-link" v-on:click="teams_openModal">Click Here</span> to add
    </h4>

    <section id="Pagination" class="c-pagination" v-show="teamsTotalPages > 1">
        <div class="container">
            <paginate v-bind:page-count="teamsTotalPages"
                      v-bind:container-class="teams.dataPaging.pagination"
                      v-bind:prev-text="teams.dataPaging.prev"
                      v-bind:next-text="teams.dataPaging.next" v-bind:click-handler="teams_pageClick">
            </paginate>
        </div>
    </section>

    <p class="c-display-message">{{teams.isLoading ? 'Loading...':'&nbsp;'}}</p>

    <div v-show="teams.data.length" class="Teams c-table-data-container"
         v-bind:class="{'lock-controls': teams.isProcessing }">

        <table class="table ">

            <thead>
                <tr>
                    <th style="width: 50px">-</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <template v-for="(item ,idx) in teams.data">

                    <tr>
                        <td>
                            {{item.id}}
                        </td>

                        <td>
                            {{item.name}}
                        </td>

                        <td>
                            <button class="s-btn s-btn-sm s-btn-outline" type="button"
                                    v-on:click="teams_edit(idx)">
                                Edit
                            </button>
                            <button class="s-btn s-btn-sm s-btn-danger" type="button"
                                    v-on:click="teams_delete(idx)">
                                Delete
                            </button>
                        </td>
                    </tr>

                </template>

            </tbody>
        </table>
    </div>

    <div class="modal" id="TeamModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">

                    <table class="c-table-data c-table-controls is-arabic"
                           v-bind:class="{'lock-controls': teams.form.isLoading || teams.form.isSaving }">
                        <tr>
                            <td>
                                <label>Name</label>
                                <input type="text" class="form-control" v-model="teams.form.record.name" />
                            </td>
                        </tr>
                    </table>

                </div>

                <div class="modal-footer modal-footer-centered">
                    <p class="f-display-message">{{ teams.form.message}}</p>
                    <div class="modal-buttons-container">
                        <button v-bind:disabled="teams.form.isSaving" type="button" class="s-btn s-btn-primary" v-on:click="teams_save">
                            Save
                        </button>
                        <button type="button" class="s-btn s-btn-outline" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>