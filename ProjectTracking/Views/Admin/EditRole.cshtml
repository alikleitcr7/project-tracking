@model EditRoleViewModel
<div class="px-5">
    <h2>Edit role</h2>

    <form asp-controller="Admin" asp-action="EditRole" method="post" class="form-horizontal" role="form">
        <h4>You can change the role details below</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Id" class="col-md-2 "></label>
            <div class="col-md-10">
                <input asp-for="Id" class="form-control" readonly="readonly" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="RoleName" class="col-md-2 "></label>
            <div class="col-md-10">
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn Button-Shared" value="Save role" />
                <a asp-action="RoleManagement" class="btn Button-Shared">Cancel</a>
            </div>
        </div>
    </form>
    <div class="my-5 d-none">
        <a asp-action="AddUserToRole" asp-route-roleId="@Model.Id" class="btn Button-Shared">Add users to role</a>
        <a asp-action="DeleteUserFromRole" asp-route-roleId="@Model.Id" class="btn Button-Shared">Remove users from role</a>
    </div>
    <h3>Users in this role</h3>
    <table class="table ">
        <thead>
            <tr>
                <th> Name </th>
                <th> Email </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td> @user.Email</td>

                </tr>
            }
        </tbody>
    </table>

</div>